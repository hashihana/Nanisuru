<div class="container wrapper flex">
<div class="row">
    <div class="col-md-3 border rounded">
	<%= render 'admin/spots/search_sidebar', genres: @genres %>

	 </div>
	<!--<div class="sidebar">-->
	<!--	<h3>ジャンル一覧</h3>-->
	<!--	<%# @genres.each do |genre| %>-->
	<!--		<%#= link_to genre.name, admin_spots_path(genre_id: genre.id) %>-->
	<!--	<%# end %>-->
	<!--</div>-->
	<div class="content col-md-9">
		<% if @genre.present? %>
			<h2 class="section-ttl">ジャンル：<%= @genre.name %> (全<%= @all_spots_count %>件)</h2>
		<% else %>
			<h2 class="section-ttl">スポット (全<%= @all_spots_count %>件)</h2>
		<% end %>
		<% if @spots.first %>
			<div class="spots">
				<% @spots.each do |spot| %>
					<%= link_to admin_spot_path(spot) do %>
						<%= image_tag spot.get_spot_image(100,100), format: "jpeg", fallback: "no-image.png" %>
						<p><%= spot.genre.name %></p>
						<p><%= spot.name %></p>
							<div class="average-review-rating" data-score=<%= spot.reviews.average(:all_rating) %>></div>
　							<%=@all_rating %>：<%= spot.reviews.average(:all_rating).to_f.round(1) %>
							</div>
					<% end %>
				<% end %>
			</div>
			<%= paginate @spots %>
		<% else %>
			<h3>対応するスポットはありませんでした。</h3>
		<% end %>


	</div>
	</div>
</div>