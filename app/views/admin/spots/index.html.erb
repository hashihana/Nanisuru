	<div class="content">
		<%= render 'serach', {spots: @spots, keyword: @keyword} %>
		<% if params[:genre_id] %>
			<h4 class="section-ttl"><%= @genre.name %>のスポット (全<%= @all_spots_count %>件)</h4>
		<% else %>
			<h4 class="section-ttl">スポット (全<%= @all_spots_count %>件)</h4>
		<% end %>
		<% if @spots.first %> 
			<div class="spots">
				<% @spots.each do |spot| %>
					<%= link_to spot_path(spot) do %>
						<%= image_tag spot.get_spot_image(100,100), format: "jpeg", fallback: "no-image.png" %>
						<h5><%= spot.genre.name %></h5>
						<p><%= spot.name %></p>
					<% end %>
				<% end %>
			</div>
			<%= paginate @spots %>
		<% else %>
			<h3>対応するスポットはありませんでした。</h3>
		<% end %>
	</div>
	</div>
</div>