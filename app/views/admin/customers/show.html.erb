<div class="container">
	<h2 class="section-ttl"><%= @customer.nickname %>さんのページ</h2>
	<div class="row">

	<table class="table table-bordered table-hover mt-4">
		<thead>
			<tr>
				<th>会員情報</th>
				<th><%= image_tag @customer.get_profile_image(60,60), class: "rounded-circle" %></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>会員ID</td>
				<td colspan="2"><%= @customer.id %></td>
			</tr>
			<tr>
				<td>ニックネーム</td>
				<td><%= @customer.nickname %></td>
			</tr>

			<tr>
				<td>メールアドレス</td>
				<td colspan="2"><%= @customer.email %></td>
			</tr>

				<!--<td>会員ステータス</td>-->
				<!--<td colspan="2">-->
				<!-- <%# if @customer.is_deleted %>-->
    <!--    <span class="bg-danger">退会済</span>-->
    <!--      <%# else %>-->
    <!--    <span class="bg-info">有効会員</span>-->
    <!--      <%# end %>-->
				<!--</td>-->

				<tr>
				<td>会員ステータス</td>
				<td colspan="2">
					<% if @customer.is_active? %>
						<span class="text-active">有効	</span>
					<% else %>
						<span class="text-invalid">退会済み</span>
					<% end %>
				</td>
			</tr>
			<tr>
				<td><%= link_to "編集", edit_admin_customer_path(@customer), class: "btn btn-success" %></td>
				<td><%= link_to "レビュー履歴", admin_customer_reviews_path(@customer), class: "btn btn-primary" %></td>
			</tr>
		</tbody>
	</table>
	</div>
</div>