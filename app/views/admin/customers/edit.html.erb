<div class="container">
	<h2 class="section-ttl"><%= @customer.nickname %> さんの会員情報編集</h2>
	<div class="row">
		
		<%= form_with model:@customer, url: admin_customer_path(@customer) do |f| %>
			<table class="table">
				<thead>
					<th></th>
					<th></th>
				</thead>
				<tbody>
					<tr>
						<td>ニックネーム</td>
						<td colspan="2"><%= f.text_field :nickname, :placeholder =>"#{@customer.nickname}" %></td>
					</tr>
					<tr>
						<td>メールアドレス</td>
						<td colspan="2"><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@customer.email}" %></td>
					</tr>
					<tr>
						<td>会員ステータス</td>
						<td><%= f.radio_button :is_active, false %><%= f.label :is_active, "退会済み", value: false, class: "text-active" %></td>
						<td><%= f.radio_button :is_active, true %><%= f.label :is_active, "有効", value: true, class: "text-invalid" %></td>
					</tr>
					<tr>
						<td colspan="3"><%= f.submit "更新", class: "btn btn-primary" %></td>
					</tr>
				</tbody>
			</table>
		<% end %>
	</div>
</div>