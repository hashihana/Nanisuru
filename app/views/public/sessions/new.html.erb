<div class="container">
<h2>ログイン</h2>

<%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>

    <!--<div class="field">-->
    <!--  <%#= f.label :nickname, "ニックネーム"%><br>-->
    <!--  <%#= f.text_field :nickname %>-->
    <!--</div>-->

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>
  
  <h6 class="text-left">登録がお済みでない方</h6>
  <p><%= link_to "こちら", new_customer_registration_path, class: "underline" %>から新規登録を行なってください。</p>
</div>
