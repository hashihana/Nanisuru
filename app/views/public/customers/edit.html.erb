<div class="inner">
	<h2 class="section-ttl">会員情報編集</h2>
	<%= form_with model:@customer, url: edit_customer_path do |f| %>
		<!--<%#= render 'layouts/error_messages', resource: @customer %>-->
		<div class="row field">
		<%= f.label :"ニックネーム", class: "col-lg-2" %>
    <%= f.text_field :nickname, class:"col-md-2" %>
     <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
      <div>
        <div class="col-lg-5 text-center">
          <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
          <%= link_to '退会する', confirm_withdraw_customer_path, class: "glyphicon glyphicon-tint btn btn-danger"%>
        </div>
      </div>
       <% end %>
</div>