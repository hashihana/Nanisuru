<div class="container">
  <h2 class="section-ttl">会員情報編集</h2>
  <div class="row mx-auto mt-5">
	  <%= form_with(model:@customer, url:customer_path, local: true ,method: :put) do |f| %>
  	  <%= render 'public/shared/error_messages', resource: @customer %>
  		
  		<div class="row border-bottom mt-3">
    		<div class="col-md-6">
    		  <%= f.label :"プロフィール画像" %>
    		</div>
    		<div class="col-md-6">
    		  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    		</div>
  		</div>
  		
  		<div class="row border-bottom mt-3">
    		<div class="col-md-6">
    		  <%= f.label :"ニックネーム" %>
    		</div>
    		<div class="col-md-6">
    		  <%= f.text_field :nickname %>
    		</div>
  		</div>
  		
  		<div class="row border-bottom mt-3">
    		<div class="col-md-6">
    		  <%= f.label :"メールアドレス" %>
    		</div>
    		<div class="col-md-6">
    		  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    		</div>
  		</div>
  		
      <div class="row mt-4">
        <div class="col-md-12">
          <%= f.submit "編集内容を保存する", class: "btn btn-outline-primary" %>
        </div>
        <div class="col-md-12 mt-5">
          <%= link_to '退会する', confirm_withdraw_customer_path, class: "btn btn-outline-secondary"%>
        </div>
      </div>
    <% end %>
  </div>
</div>