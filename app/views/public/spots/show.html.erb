<div class="container wrapper flex">
  <div class="row">
    <div class="col-md-3 border rounded">
	    <%= render 'public/spots/search_sidebar', genres: @genres %>
    </div>
    <div class="content col-md-9">
		  <h2 class="section-ttl"><%= @spot.name %></h2>
		  <div class="flex">
			  <%= image_tag @spot.get_spot_image(250, 200), class: "img-thumbnail spot_image_show" %>
  			<div class="spot_info">
          <p>ジャンル: <%= link_to @spot.genre.name, spots_path(genre_id: @spot.genre_id) %></p>
  				<p><%= @spot.address %></p><br>
  				<p><%= @spot.introduction %></p><br>

          <h5>「行った」レビュー</h5>
          <div class="reviews-form mb-3">
            <!--口コミ投稿フォーム-->
            <%= render "public/reviews/form", spot: @spot, review: @review %>
          </div>
          <div class="reviews-index">
            <%= render "public/reviews/list", spot: @spot, review: @review, reviews: @reviews %>
          </div>
  	    </div>
      </div>
	  </div>
  </div>
</div>