<table class="customer_review">
		<h4><%= @customer.nickname %>さんのレビュー履歴一覧</h4>
	<table class="table">
		 <thead class="thead-light">
		  <tr>
			  <th>レビュー日</th>
				<th>スポット</th>
				<th>評価</th>
				<th>レビュー詳細</th>
				<th>削除</th>
			</tr>
		</thead>
	<tbody>
	  	<% @reviews.each do |review| %>
				<tr>
					<td><%= review.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
					<td><%= link_to review.spot.name, spot_path(review.spot) %></td>
				<td id="review-<%= review.id %>">
          <script>
            var elem = document.getElementById("review-<%= review.id %>");
            var opt = {
              starOn: "<%= asset_path('star-on.png') %>",
              starOff: "<%= asset_path('star-off.png') %>",
              starHalf: "<%= asset_path('star-half.png') %>",
              scoreName: 'review[all_rating]',
              half: true,
              readOnly: true,
              score: <%= review.all_rating %>
              };
              raty(elem,opt);
          </script>
        </td>
					<td><%= review.comment %></td>
				
					<td><%= link_to "削除", customer_review_path(@customer, review), method: :delete, class: "btn btn-danger pull-right" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	</div>
	</table>
	<%= paginate @reviews %>
